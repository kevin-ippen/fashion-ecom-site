# Environment variables for Fashion Ecommerce Demo
# Copy this file to .env and fill in your values

# ============================================================================
# Databricks Workspace Configuration
# ============================================================================
DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com

# OAuth Service Principal credentials (for production/Databricks Apps)
DATABRICKS_CLIENT_ID=
DATABRICKS_CLIENT_SECRET=

# SQL Warehouse ID for queries
SQL_WAREHOUSE_ID=your-warehouse-id

# Vector Search Configuration
VS_ENDPOINT_NAME=your-vector-search-endpoint
VS_INDEX=main.fashion_sota.product_embeddings_us_relevant_index

# ============================================================================
# Lakebase PostgreSQL Connection
# (Auto-injected when running in Databricks Apps with Lakebase attached)
# ============================================================================
PGHOST=your-lakebase-instance.database.azuredatabricks.net
PGPORT=5432
PGDATABASE=databricks_postgres
PGUSER=your-email@example.com

# ============================================================================
# API Configuration
# ============================================================================
DEBUG=False

# ============================================================================
# Optional: For local script execution
# ============================================================================
DATABRICKS_USER=your-email@example.com
DATABRICKS_NOTEBOOK_PATH=/Users/your-email@example.com/notebook_name
